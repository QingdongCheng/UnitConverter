<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.purdue.qingdong.unitconverterv10.MainActivity"
    android:weightSum="1">

    <TableLayout
        android:layout_height="100sp"
        android:layout_width="match_parent">
        <TableRow>

            <Button
                android:text="Length"
                android:textAllCaps="false"
                android:id="@+id/btnLength"
                android:background="?attr/selectableItemBackground"
                android:drawableTop="@drawable/ruler"
                android:onClick="onLength" />

            <Button
                android:text="Weight"
                android:textAllCaps="false"
                android:layout_marginLeft="2sp"
                android:id="@+id/btnWeight"
                android:background="@color/grey"
                android:drawableTop="@drawable/scales" />

            <Button
                android:text="Temparature"
                android:textAllCaps="false"
                android:layout_marginLeft="2sp"
                android:id="@+id/btnThermometer"
                android:background="?attr/selectableItemBackground"
                android:drawableTop="@drawable/thermometer"
                android:onClick="onThermometer" />

            <Button
                android:text="Help"
                android:textAllCaps="false"
                android:id="@+id/btnHelp"
                android:layout_marginLeft="2sp"
                android:background="?attr/selectableItemBackground"
                android:drawableTop="@drawable/help"
                android:onClick="onHelp" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="0.90">

        <TableRow>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:id="@+id/inputWeight" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:id="@+id/spinnerWeight" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0"
                android:textColor="@color/text"
                android:gravity="right"
                android:textAlignment="gravity"
                android:id="@+id/mgText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" mg"
                android:id="@+id/mgTextUnit" />
        </TableRow>


        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0"
                android:textColor="@color/text"
                android:gravity="right"
                android:textAlignment="gravity"
                android:id="@+id/gText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" g"
                android:id="@+id/gTextUnit" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0"
                android:textColor="@color/text"
                android:gravity="right"
                android:textAlignment="gravity"
                android:id="@+id/kgText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" kg"
                android:id="@+id/kgTextUnit" />

        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0"
                android:textColor="@color/text"
                android:gravity="right"
                android:textAlignment="gravity"
                android:id="@+id/tonText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" ton"
                android:id="@+id/tonTextUnit" />
        </TableRow>


        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0"
                android:textColor="@color/text"
                android:gravity="right"
                android:textAlignment="gravity"
                android:id="@+id/ozText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" oz"
                android:id="@+id/ozTextUnit" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0"
                android:textColor="@color/text"
                android:gravity="right"
                android:textAlignment="gravity"
                android:id="@+id/lbText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" lb"
                android:id="@+id/lbTextUnit" />

        </TableRow>

    </TableLayout>

</LinearLayout>
