<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.purdue.qingdong.unitconverterv10.MainActivity"
    android:onClick="onLength"
    android:weightSum="1">

    <TableLayout
        android:layout_height="100dp"
        android:layout_width="match_parent">
        <TableRow>

            <Button
                android:text="Length"
                android:id="@+id/btnLength"
                android:background="@color/grey"
                android:drawableTop="@drawable/ruler"/>

            <Button
                android:text="Weight"
                android:id="@+id/btnWeight"
                android:background="?attr/selectableItemBackground"
                android:drawableTop="@drawable/scales"
                android:onClick="onWeight" />

            <Button
                android:text="Temparature"
                android:id="@+id/btnThermometer"
                android:background="?attr/selectableItemBackground"
                android:drawableTop="@drawable/thermometer"
                android:onClick="onThermometer" />

            <Button
                android:text="Help"
                android:id="@+id/btnHelp"
                android:background="?attr/selectableItemBackground"
                android:drawableTop="@drawable/help"
                android:onClick="onHelp" />

        </TableRow>




    </TableLayout>

    <TableLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="0.90"
        >

        <TableRow>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:ems="10"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:id="@+id/inputLength" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/spinner" />
        </TableRow>

        <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10"

            android:gravity="right"
            android:textAlignment="gravity"
            android:id="@+id/mmText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="mm"

            android:id="@+id/mmTextUnit" />
        </TableRow>


        <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="20"

            android:gravity="right"
            android:textAlignment="gravity"
            android:id="@+id/cmText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="cm"

            android:id="@+id/cmTextUnit" />

        </TableRow>

        <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="30"

            android:gravity="right"
            android:textAlignment="gravity"
            android:id="@+id/mText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="m"

            android:id="@+id/mTextUnit" />

        </TableRow>

        <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="40"
            android:gravity="right"
            android:textAlignment="gravity"
            android:id="@+id/kmText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="km"

            android:id="@+id/kmTextUnit" />

        </TableRow>

        <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="50"

            android:gravity="right"
            android:textAlignment="gravity"
            android:id="@+id/inchText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="inch"

            android:id="@+id/inchTextUnit" />
        </TableRow>

        <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="60"

            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_column="0"
            android:id="@+id/ftText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ft"

            android:id="@+id/ftTextUnit" />
        </TableRow>

        <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="70"

            android:gravity="right"
            android:textAlignment="gravity"
            android:id="@+id/ydText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="yard"

            android:id="@+id/yardTextUnit" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="80"

            android:gravity="right"
            android:textAlignment="gravity"
            android:id="@+id/mileText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="mile"

            android:id="@+id/mileTextUnit" />
        </TableRow>

    </TableLayout>

</LinearLayout>
